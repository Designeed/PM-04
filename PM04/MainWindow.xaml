<Window x:Class="PM04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Город" Grid.Row="0">
            <TextBox x:Name="CityTextBox" TextChanged="CityTextBox_TextChanged"/>
        </GroupBox>

        
        <GroupBox Header="Улица" Grid.Row="1">
            <TextBox x:Name="StreetTextBox" TextChanged="StreetTextBox_TextChanged"/>
        </GroupBox>

        <GroupBox Header="Почтовый индекс" Grid.Row="2">
            <TextBox x:Name="EmailIndexTextBox" TextChanged="EmailIndexTextBox_TextChanged" KeyUp="EmailIndexTextBox_KeyUp" KeyDown="EmailIndexTextBox_KeyDown"/>
        </GroupBox>
    </Grid>
</Window>
